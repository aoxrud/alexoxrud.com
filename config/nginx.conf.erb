# Example config/nginx.conf.erb content
worker_processes <%= ENV['NGINX_WORKER_PROCESSES'] || 1 %>;
daemon off;

events {
  worker_connections 1024;
}

http {
  include mime.types;
  default_type application/octet-stream;

  gzip on;
  gzip_disable "msie6";

  server {
    listen <%= ENV['PORT'] %>;
    server_name localhost;

    root <%= ENV['NGINX_ROOT'] || '/public' %>;

    location / {
      try_files $uri $uri/ /index.html;
    }
  }
}